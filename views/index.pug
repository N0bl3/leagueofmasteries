doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title LeagueOfMasteries
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous")
    link(rel="stylesheet" href="index.css")
body
    div.container-fluid
      div.row.text-center
        div.col-xs-12
          h1 League of Masteries
          h2 API Challenge 2016
          div#response-zone
          br
          p#player-score
      div.row.text-center
        button#progression-button(type="button" disabled) Progression
        button#leaderboards-button(type="button" disabled) Leaderboards//NOT DEV
        button#get-top-ten(type="button" disabled) Get Top Twelve Champions
        button#get-team-mastery(type="button" disabled) Your Team Mastery//NOT DEV
        form#by-champion
          select(name="champion")
            option(value=0) Champion
            each champion in champions
              option(value=champion.key)= champion.name
      div.row.text-center
        form#summ-by-name
          label(for="summ-name")
            input(type="text" name="summ-name" placeholder="Search a summoner by name...")
          label(for="region")
            select(name="region")
              option(value="euw") EUW
              option(value="br") BR
              option(value="eune") EUNE
              option(value="na") NA
              option(value="jp") JP
              option(value="kr") KR
              option(value="lan") LAN
              option(value="las") LAS
              option(value="oce") OCE
              option(value="ru") RU
              option(value="tr") TR
          input(type="submit" value="OK?")
      div.row.text-center#top-zone
      div.row.text-center#progression-zone
    script(type="text/javascript" src="https://code.jquery.com/jquery-2.2.3.min.js" integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.3.11/parsley.min.js")
    script(type="text/javascript" src="index.js")
      