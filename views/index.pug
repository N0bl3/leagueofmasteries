//if IE
  script(src='https://cdn.jsdelivr.net/html5shiv/3.7.2/html5shiv.min.js')
  script(src='https://cdn.jsdelivr.net/respond/1.4.2/respond.min.js')
nav(class="navbar navbar-default navbar-static-top")
  div.container-fluid
    div.navbar-header
      button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      - var profileIconUrl = "http://ddragon.leagueoflegends.com/cdn/6.8.1/img/profileicon/" + profileIconId + ".png";
      img.navbar-brand(src=profileIconUrl)
      a.navbar-brand #{summonerName} #{id}
    div.collapse.navbar-collapse#navbar-collapse-1
      ul.nav.navbar-nav
        li.active
          a Home
            span.sr-only Current
        li
          a#get-top-ten Top 12
        li
          a#progression-button Progression
        li
          a#get-game-team-mastery Team
        li
          a#quizz-button Quizz
        li
          a#leaderboards-button Leaderboards
      div.nav.navbar-nav.navbar-right
        form#summ-by-name.navbar-form.navbar-left(role="search")
            div.form-group
              input.form-control(type="text" name="summ-name" placeholder="Look for another summoner")
              select(name="region")
                option(value="euw") EUW
                option(value="br") BR
                option(value="eune") EUNE
                option(value="na") NA
                option(value="jp") JP
                option(value="kr") KR
                option(value="lan") LAN
                option(value="las") LAS
                option(value="oce") OCE
                option(value="ru") RU
                option(value="tr") TR
              button.btn.btn-default(type="submit") Search
div.container-fluid
  div.row.text-center
    div.col-xs-12
      h1 League of Masteries
      h2 API Challenge 2016
      br
      p#player-score
  div.row.text-center
    form#by-champion
      select(name="champion")
        option(title="None" value=0) Champion
        each champion in champions
          option(title=champion.key value=champion.id)= champion.name
        input(type="submit" value="OK?")
  div.row.text-center#response-zone
script(type="text/javascript") var options ={playerId: #{id}, playerName: "#{playerName}", region: "#{region}", summonerName: "#{summonerName}"};
