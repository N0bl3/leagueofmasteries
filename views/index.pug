include fb.html
nav(class="navbar navbar-inverse")
  div.container-fluid
    div.navbar-header
      button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      - var profileIconUrl = "http://ddragon.leagueoflegends.com/cdn/6.8.1/img/profileicon/" + profileIconId + ".png";
      a.navbar-brand League of Masteries
    div.collapse.navbar-collapse#navbar-collapse-1
      ul.nav.navbar-nav
        li
          a#progression-button Progression
        li
          a#get-top-ten Top 12
        li
          a#get-game-team-mastery Team
        li
          a#quizz-button Quizz
        li
          a#leaderboards-button Leaderboards
      div.nav.navbar-nav.navbar-right
        form#summ-by-name.navbar-form.navbar-left(role="search")
            div.form-group
              input.form-control(type="text" name="summ-name" placeholder="Look for another summoner")
              select(name="region")
                option(value="euw") EUW
                option(value="br") BR
                option(value="eune") EUNE
                option(value="na") NA
                option(value="jp") JP
                option(value="kr") KR
                option(value="lan") LAN
                option(value="las") LAS
                option(value="oce") OCE
                option(value="ru") RU
                option(value="tr") TR
              button.btn.btn-default(type="submit") Search
div.fb-like(data-share="true" data-width="450" data-show-faces="false")
div.container-fluid
  div.row.text-center
    div.col-xs-12
      h1
        img(src=profileIconUrl)
        |  #{summonerName}
  div.row.text-center
    div.col-xs-4.col-xs-offset-4
      p#player-score
  div.row.text-center#recommended
  div.row.text-center
    form#by-champion
      select(name="champion")
        option(title="None" value=0) Mastery By Champion
        each champion in champions
          option(title=champion.key value=champion.id)= champion.name
        input(type="submit" value="OK?")
  div.row.text-center#response-zone
